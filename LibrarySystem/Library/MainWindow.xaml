<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="T-App" Height="450" Width="800" ResizeMode="NoResize" Icon="/images/letter-t.png">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF8F7575"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="kullanici" HorizontalAlignment="Left" Margin="100,43,0,0" Grid.Row="1" TextWrapping="NoWrap" VerticalAlignment="Top" Width="140" Height="27" FontSize="16"/>
        <PasswordBox Name="password" HorizontalAlignment="Left" Margin="100,76,0,0" Grid.Row="1" VerticalAlignment="Top" Width="140" Height="28" FontSize="16" />
        <Label Content="Kullanıcı Adı=" Margin="13,41,152,184" Grid.Row="1" FontWeight="Bold"/>
        <Label Content="Şifre=" Margin="53,76,153,165" Grid.Row="1" FontWeight="Bold"/>
        <Image Grid.Column="1" HorizontalAlignment="Center" Height="434" Grid.RowSpan="2" VerticalAlignment="Top" Width="550" Source="/images/wallpaperflare.com_wallpaper.jpg" Stretch="UniformToFill"/>
        <Button Content="Giriş" Margin="125,130,40,105" Grid.Row="1" FontSize="14" FontWeight="Bold" BorderBrush="#FF250505" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF73738F"/>
                    <GradientStop Color="#FFB6B6BC" Offset="0.741"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Image Margin="12,8,11,10" Source="/images/512px-Closed_Book_Icon.svg.png" Stretch="Uniform" StretchDirection="Both"/>

    </Grid>
</Window>
